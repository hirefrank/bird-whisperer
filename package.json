{
  "name": "bird-whisperer",
  "version": "1.0.0",
  "packageManager": "pnpm@10.28.2",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --remote",
    "deploy": "wrangler deploy",
    "kv:create": "wrangler kv:namespace create BIRD_WHISPERER",
    "sync-cookies": "./scripts/sync-cookies.sh",
    "trigger:enable": "echo 'true' | wrangler secret put ENABLE_MANUAL_TRIGGER",
    "trigger:disable": "echo 'false' | wrangler secret put ENABLE_MANUAL_TRIGGER",
    "trigger": "curl https://bird-whisperer.hirefrank.workers.dev/trigger",
    "kv:reset": "wrangler kv key list --namespace-id=b5f4bd3f021f4cc0a7148dd37ab20023 | jq -r '.[].name' | while read key; do wrangler kv key delete --namespace-id=b5f4bd3f021f4cc0a7148dd37ab20023 \"$key\"; done",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ai-sdk/google": "^1.0.0",
    "@steipete/bird": "^0.8.0",
    "ai": "^4.0.0",
    "hono": "^4.0.0",
    "js-yaml": "^4.1.0",
    "marked": "^17.0.1",
    "resend": "^4.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "tsx": "^4.6.2",
    "typescript": "^5.3.0",
    "wrangler": "4"
  }
}
